<body class="sb-nav-fixed">
  <%= render "base/header" %>
  <div id="layoutSidenav">
      <div id="layoutSidenav_nav">
      <%= render "base/sidebar" %>
      </div>
      <div id="layoutSidenav_content">
          <main>
              <div class="container-fluid px-4">
                  <h1 class="mt-4"><%= t ".room" %></h1>
                  <ol class="breadcrumb mb-4">
                      <li class="breadcrumb-item"><%= link_to t(".dashboard"), admin_index_path %></li>
                      <li class="breadcrumb-item active"><%= t ".room" %></li>
                  </ol>
                  <div class="card mb-4">
                      <div class="card-header">
                          <i class="fas fa-table me-1"></i>
                          <%= t ".room" %>
                      </div>
                      <div class="card-body">
                          <table id="datatablesSimple">
                          </table>
                      </div>
                  </div>
              </div>
          </main>
          <%= render "base/footer" %>
      </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <%= javascript_pack_tag "scripts", "data-turbolinks-track": "reload" %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
  <%= javascript_pack_tag "chart-area", "data-turbolinks-track": "reload" %>
  <%= javascript_pack_tag "chart-bar", "data-turbolinks-track": "reload" %>
  <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
  <%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
</body>
